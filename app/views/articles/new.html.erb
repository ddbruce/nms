<div class="panel panel-default">
  <ol class="breadcrumb">
    <li><%= link_to "Dashboard", user_dashboard_path(current_user) %></li>
    <li class="active"> New Article </li>
  </ol>
  <div class="row .padding1em">
    <div class="col-md-3 col-md-offset-2" style="text-align: center">
      <%= form_for @article, action: "create" do |f| %>
      <p>
        <h3> <%= f.label :headline %> </h3>
        <%= f.text_field :headline %>
      </p>

      <p>
        <h3> <%= f.label :deck %> </h3>
        <%= f.text_field :deck %>
      </p>
    </div>
    <div class="col-md-5">
      <p>
        <h3> <%= f.label "Body text" %> </h3>
        <%= f.text_area :bodytext, :style => 'height: 110px;' %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <% if !@organizations.nil? %>
      <p> 
        <h4> <%= f.label :publishing_organization %> </h4>
        <%= f.select :organization_id, @organizations, { include_blank: true } %> 
      </p>
      <% end %>
    </div>
    <div class="col-md-4">
      <% if !@sections.nil? %>
      <p>
        <h4
        > <%= f.label :section %> </h4
        > 
        <%= f.select :section_id, @sections, {include_blank: true} %>
      </p>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-2 col-md-offset-5" id="article_create">
        <p> 
          <%= f.submit "Create article", :id => "create" %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>
