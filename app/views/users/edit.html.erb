<div class="panel panel-default">
  <div class="panel-heading">
    <h3> <%= "Editing Account - #{@user.name}" %> </h3>
  </div>
  <div class="panel-body">
    <%= form_for @user do |f| %>

      <div class="input-group">
        <span class="input-group-addon">Email</span>
        <%= f.text_field :email,  :class=>"form-control" %>
      </div><br/>

      <div class="input-group">
        <span class="input-group-addon">First</span>
        <%= f.text_field :fname, :class=>"form-control" %>
      </div><br/>

      <div class="input-group">
        <span class="input-group-addon">Last</span>
        <%= f.text_field :lname, :class=>"form-control" %>
      </div><br/>

      <div class="input-group">
        <span class="input-group-addon">RIN</span>
        <%= f.text_field :RIN, :class=>"form-control" %>
      </div><br/>
      
      <div class="input-group">
        <span class="input-group-addon">Year</span>
        <%= f.text_field :year, :class=>"form-control" %>
      </div>

      <br />
      <%= f.submit :class => "btn btn-default" %> <%= link_to "Deactivate Account", "#", :class => "btn btn-warning pull-right" %>
    <% end %>
  </div>
</div>