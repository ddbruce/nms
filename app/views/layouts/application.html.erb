<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "application.css" %>
  <link rel="icon" type="image/png" href="../../assets/images/favicon.png">
  <%= javascript_include_tag "application.js" %>
  <!-- get rid of this in the real deployment -->
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:600,900,600italic,900italic|Droid+Serif:400,700,400italic,700italic|Open+Sans:400italic,700italic,400,700' rel='stylesheet' type='text/css'>
  <meta charset="UTF-8">
</head>
<body>

  <!-- Page header -->
  <%= render partial: "layouts/header" %>

  <br/><br/>
  <main role="main">
    <div class="container">
      <div class="content">
        <div class="row">
          <div class="span12">
            <!-- Flash messages -->
            <%= render partial: "layouts/messages" %>
            <!-- Page content -->
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </main>
  <br/><br/>

  <!-- Footer -->
  <%= render partial: "layouts/footer" %>

</body>
</html>